{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "components",
    "router",
    "stores",
    "desktop",
    "desktop",
    "mobile",
    "shared/stores/counter.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./src/*"],
      "@apps/*": ["./apps/*"],
      "@shared/*": ["./shared/*"],
      "@components/*": ["./components/*"],
      "@mobile/*": ["./mobile/*"],
      "@desktop/*": ["./desktop/*"],
      "@styles/*": ["./styles/*"]
    }
  }
}
